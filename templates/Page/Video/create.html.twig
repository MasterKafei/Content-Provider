{% extends 'Layout/Default/base.html.twig' %}

{% block body %}
    <div class="px-4 px-6 lg:px-8">
        <div class="mt-8 flex flex-col bg-white rounded-xl border border-x-gray-300 border-t-gray-300 pt-5">
            {{ form_start(form) }}
            <div class="m-5">
                <div class="grid grid-cols-6 items-start gap-4 pt-5 text-center">
                    <label for="name"
                           class="block text-sm font-medium mt-px pt-2">{{ form_label(form.name, 'Nom') }}</label>
                    <div class="mt-1 mt-0">
                        {{ form_widget(form.name, {'attr': {'class': 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 max-w-xs text-sm'}}) }}
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="grid pt-5">
                <button type="submit"
                        class="rounded border border-transparent bg-indigo-600 px-2.5 py-1.5 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Cr√©er
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}